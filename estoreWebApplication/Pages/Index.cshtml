@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid bg-light text-dark mb-4 shadow">
    <div class="container p-5">
        <h1 class="display-4">Contoso Electronics</h1>
        <hr>
        <h5>We sell the most affordable and highest quality electronic devices.</h5>
    </div>
</div>

<div class="row">
    @if (Model?.Products?.Count > 0)
    {
        foreach (var item in Model.Products)
        {
            <div class="col-md-4 text-center">
                <div class="card shadow rounded">
                    <div class="card-header" style="height:60px">
                        <strong>@item.Name</strong>
                    </div>
                    <div class="card-body" style="height:350px">
                        <img src="@item.ImageName" height="120" />
                        <p class="mt-3"><a class="btn btn-success" asp-page="/Orders/Create" asp-area="Customer" asp-route-productid="@item.Id">Oder Now &raquo;</a></p>
                        <p>@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <span class="badge rounded-pill bg-danger"><h6>$@item.Cost</h6></span>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>There are no products to display</p>
    }
</div>
